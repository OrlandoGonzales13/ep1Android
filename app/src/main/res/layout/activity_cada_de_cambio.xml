<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadaDeCambio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/exchange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="CASA DE CAMBIO"/>

        <EditText
            android:id="@+id/txtSoles"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Ingrese Cantidad en Soles"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/txtDolares"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:enabled="false"
            android:hint="De Soles a DÃ³lares"/>
        <EditText
            android:id="@+id/txtEuros"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:enabled="false"
            android:text="De Soles a Euros"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnConvertir"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Convertir"/>
            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Limpiar"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>