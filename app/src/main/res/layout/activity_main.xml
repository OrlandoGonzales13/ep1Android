<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDC270"
        android:gravity="center"
        android:padding="24dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/images" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="34dp"
            android:textColor="#AB310A"
            android:textStyle="bold|italic"
            android:text="SERVICIOS"/>
        <Button
            android:id="@+id/btnCambio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:backgroundTint="#AC310A"
            android:text="Casa de Cambio"/>
        <Button
            android:id="@+id/btnSalarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:backgroundTint="#AC310A"
            android:text="Calcular Salarios"/>

        <Button
            android:id="@+id/btnProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#AB310A"
            android:text="Registro de Productos"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btnEquipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:backgroundTint="#AC310A"
            android:text="Listado de Equipos"/>
        <Button
            android:id="@+id/btnIntegrantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:backgroundTint="#AC310A"
            android:text="Integrantes"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>