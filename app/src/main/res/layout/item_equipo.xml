<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-74dp"
        tools:layout_editor_absoluteY="61dp">

        <TextView
            android:id="@+id/txtEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo"
            android:textColor="#AB310A"
            android:textSize="34dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pais"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtEstadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadio"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtCapacidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacidad"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imgEscudo"
            android:layout_width="131dp"
            android:layout_height="122dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/default_escudo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>